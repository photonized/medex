<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <!-- Landing Page Light-->

    <RelativeLayout
        android:id="@+id/light_landingPage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FCFAF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:fontFamily="@font/quicksand">

        <!-- Main Page -->

        <Button
            android:id="@+id/logout_button"
            android:layout_width="139dp"
            android:layout_height="59dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand"
            android:onClick="onLogOutClick"
            android:text="@string/log_out"
            android:layout_alignParentBottom="true"
            android:textColor="#FCFAF1" />

        <Button
            android:id="@+id/admin_button"
            android:layout_width="139dp"
            android:layout_height="59dp"
            android:layout_above="@+id/logout_button"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand"
            android:onClick="onAdminClick"
            android:layout_centerHorizontal="true"
            android:text="@string/admin"
            android:textColor="#FCFAF1" />

        <Button
            android:id="@+id/clinicButton"
            android:layout_width="139dp"
            android:layout_height="59dp"
            android:layout_above="@+id/logout_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand"
            android:onClick="onClinicClick"
            android:text="@string/clinic"
            android:textColor="#FCFAF1" />

        <Button
            android:id="@+id/viewButton"
            android:layout_width="139dp"
            android:layout_height="59dp"
            android:layout_above="@+id/logout_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand"
            android:onClick="onClinicViewClick"
            android:text="@string/view_clinics"
            android:textColor="#FCFAF1" />

        <Button
            android:id="@+id/view_appointments_button"
            android:layout_width="139dp"
            android:layout_height="59dp"
            android:layout_above="@+id/admin_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/quicksand"
            android:onClick="onClinicViewClick"
            android:text="@string/view_appointments"
            android:textColor="#FCFAF1" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="#090909" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

